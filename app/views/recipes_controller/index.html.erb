<h1>Searching for - <%= @search_term %></h1>
<p>
	Default parameter  = "chocolate"
	<br>
	To search for specific parameter use the string "?search='specific_string' "
</p>
<% if @recipes_recieved.nil? %>
	<p>No recipes found with relevant information .....sorry</p>
<% else %>
<table border = "1">
	<tr>
		<th>Image</th>
		<th>Title</th>
		<th>Social Rank</th>
	</tr>
	<% @recipes_recieved.each do |recipe| %>
	<tr class=<%= cycle("even","odd")%>>
		<td><%= link_to(image_tag(recipe["image_url"],size: "100"),recipe["source_url"]) %></td>
		<td><%= link_to(sanitize(recipe["title"]), recipe["source_url"]) %></td>
		<td><%= recipe["social_rank"] %></td>
	<tr>
	<% end %>
 </table>	
<% end %>